<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andrei.b_project.views.MainMenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/addBookImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            app:srcCompat="@drawable/addbook"
            android:onClick="handleAddBook"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="51dp"
            android:focusable="true" />

        <ImageView
            android:id="@+id/allBooksImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/myBooksImageView"
            android:layout_marginStart="28dp"
            android:clickable="true"
            android:onClick="handleAllBooks"
            app:srcCompat="@drawable/allbooks"
            android:focusable="true" />

        <ImageView
            android:id="@+id/myBooksImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/addBookImageView"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:onClick="handleMyBooks"
            app:srcCompat="@drawable/mybooks"
            android:focusable="true" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
